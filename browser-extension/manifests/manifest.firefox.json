{
  "manifest_version": 3,
  "name": "Keyvault Password Manager",
  "version": "0.1",
  "description": "A blockchain-based password manager.",
  "permissions": ["storage", "activeTab", "sidebar", "tabs"],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "https://dapp.blockchainkeyvault.com/*",
      "https://dev.blockchainkeyvault.com/*"
    ]
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    }
  },
  "sidebar_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "keyvault",
    "default_panel": "side_panel/sidebar.html",
    "open_at_install": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png"
  }
}
